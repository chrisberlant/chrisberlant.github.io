                            <a
                                class="font-bold"
                                href="https://www.netlify.com"
                                target="_blank"
                            >
                                <Image
                                    src={NetlifyLogo}
                                    class="inline-block mx-2 size-5"
                                    alt="Netlify logo"
                                />
                                Netlify
                            </a>{" "}
