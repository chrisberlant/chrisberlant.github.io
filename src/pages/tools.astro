---
import OperatingSystemAnimate from "@/assets/operating-system-animate.svg";
import BuildingAnimate from "@/assets/building-animate.svg";
import BookmarksAnimate from "@/assets/bookmarks-animate.svg";
import NotionLogo from "@/assets/notion-logo.svg";
import VercelLogoWhite from "@/assets/vercel-logo-white.svg";
import NetlifyLogo from "@/assets/netlify-logo.svg";
import ExcalidrawLogo from "@/assets/excalidraw-logo.svg";
import WhimsicalLogo from "@/assets/whimsical-logo.svg";
import YoutubeLogo from "@/assets/youtube-logo.svg";
import Card from "../components/Card";
import PageTitle from "../components/PageTitle";
import OrbitingCirclesTools from "../components/OrbitingCirclesTools";
import BaseLayout from "../layouts/BaseLayout.astro";
import GithubIcon from "../components/Icons/GithubIcon";
import { Image } from "astro:assets";
import { LoaderCircleIcon } from "lucide-react";
import OrbitingCirclesToolsSkeleton from "../components/OrbitingCirclesToolsSkeleton";
---

<BaseLayout>
    <section class="flex flex-col items-center">
        <PageTitle>My tools</PageTitle>
        <div class="flex flex-col w-full gap-8 max-w-7xl">
            <Card
                className="justify-evenly pb-4 gap-4 lg:flex-row lg:pb-0 lg:pl-0 lg:pr-4"
            >
                <OrbitingCirclesTools client:only="react">
                    <OrbitingCirclesToolsSkeleton slot="fallback" />
                </OrbitingCirclesTools>
                <div class="flex-1 lg:py-7">
                    <h2
                        class="mb-8 text-3xl font-bold text-center font-montserrat sm:mb-12"
                    >
                        Dev environment
                    </h2>
                    <ul
                        class="flex flex-col flex-wrap items-center gap-2 text-center lg:items-start lg:text-left xl:pr-5"
                    >
                        <li>
                            <span class="font-bold"> Visual Studio Code</span> is
                            my IDE
                        </li>
                        <li>
                            <span class="font-bold">Windows</span> is my main operating
                            system, as I've been using and debugging it for years
                        </li>
                        <li>
                            <span class="font-bold">Insomnia</span> is my API testing
                            tool, so I can try and debug my server-side code without
                            the front-end constraints
                        </li>
                        <li>
                            Sometimes I also use
                            <span class="font-bold">Linux</span> (Arch & Debian based
                            distributions) and
                            <span class="font-bold">WSL</span>
                        </li>
                        <li>
                            <span class="font-bold">Docker</span> allows me to run
                            my apps in a containerized environment, therefore not
                            depending on my own system specs
                        </li>
                    </ul>
                </div>
            </Card>

            <Card
                className="flex-1 justify-evenly pb-4 md:gap-4 lg:flex-row-reverse"
            >
                <Image
                    src={OperatingSystemAnimate}
                    alt=""
                    class="flex-1 max-w-60 md:max-w-xs lg:pr-4 xl:max-w-md"
                />
                <div class="flex-1 mt-8 text-center lg:mt-10 xl:mt-0">
                    <h2
                        class="mb-8 text-3xl font-bold font-montserrat sm:mb-10"
                    >
                        Online tools
                    </h2>
                    <ul
                        class="flex flex-col flex-wrap items-center gap-2.5 lg:items-start lg:pl-5 lg:text-left"
                    >
                        <li>
                            <a
                                class="font-bold"
                                href="https://www.notion.so"
                                target="_blank"
                            >
                                <Image
                                    src={NotionLogo}
                                    class="inline-block mr-1 size-6"
                                    alt="Notion logo"
                                />
                                Notion
                            </a>{" "}
                            allows me to keep tracks of my discoveries and notes,
                            and create my own documentations
                        </li>
                        <li>
                            <a
                                class="font-bold"
                                href="https://excalidraw.com/"
                                target="_blank"
                            >
                                <Image
                                    src={ExcalidrawLogo}
                                    class="inline-block mr-1 size-5"
                                    alt="Excalidraw logo"
                                />
