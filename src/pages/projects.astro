---
import BaseLayout from "../layouts/BaseLayout.astro";
import { type ProjectType } from "../components/ProjectCard.astro";
import PageTitle from "../components/PageTitle";
import ProjectCard from "../components/ProjectCard.astro";
const projects: ProjectType[] = await Astro.glob("../projects/*.md");
---

<BaseLayout
    ><section class="flex flex-col xl:mx-20 2xl:mx-44">
        <PageTitle>My projects</PageTitle>
        <div class="flex flex-col flex-wrap items-center justify-center gap-8">
            {projects.map((project) => <ProjectCard project={project} />)}
        </div>
    </section></BaseLayout
>
